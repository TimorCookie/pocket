page{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #29C07B;
  padding: 40rpx;
}
.rainbow-page {
  width: 100%;
  min-height: 100%;
  background: #F5FEFA;
  border-radius: 48rpx;
  padding: 32rpx;
}

.rainbow-content {
  width: 90%;
  margin: 0 auto;
  font-size: 32rpx;
  color: #404040;
}
.action-btns {
  display: flex;
  margin-top: 100rpx;
  width: 70%;
  margin: 100rpx auto;
  justify-content: space-around;
}
.btns-item {
  width: 140rpx;
  height: 60rpx;
  background: #29C07B;
  color: #fff;
  font-weight: bold;
  border-radius: 99rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  
}
